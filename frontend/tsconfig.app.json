{
  "compilerOptions": {
        "baseUrl": "./", // Base URL of the projectes
        "paths": {
          "@app/*": [
            "src/*" // Adjusted for general usage in the src folder
          ],
          "@dashboard/*": [
            "src/features/dashboard/*" 
          ],
          "@auth/*": [
            "src/features/auth/*" 
          ],
          "@landing/*": [
            "src/features/landing/*" 
          ],
          "@errorPage/*": [
            "src/features/errorPage/*" 
          ],
          "@uploads/*": [
            "src/features/uploads/*" 
          ],
          "@layouts/*": [
            "src/features/layouts/*" 
          ],
          "@components/*": [
            "src/features/components/*" 
          ],
          "@public/*": [
            "public/*"
          ],
          "@assets/*": [
            "src/assets/*"
          ],
          "@utils/*": [
            "src/app/utils/*" 
          ],
          "@hooks/*": [
            "src/app/hooks/*" 
          ],
          "@configs/*": [
            "src/app/configs/*" 
          ],
          "@enums/*": [
            "src/app/enums/*" 
          ],
          "@props/*": [
            "src/app/props/*" 
          ],
          "@interfaces/*": [
            "src/app/interfaces/*" 
          ],
          "@types/*/": [
            "src/app/types/*" 
          ],
          "@api/*": [
            "src/app/api/*" 
          ],
          "@store/*": [
            "src/app/store/*" 
          ]
        },   
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src", "../backend/src/listing/listing.gateway.ts", "../backend/src/listing/listing.gateway.spec.ts", "../backend/src/message/message.gateway.ts", "../backend/src/message/message.gateway.spec.ts", "../backend/src/notification/notification.gateway.ts", "../backend/src/notification/test/notification.gateway.spec.ts", "public/assets/vendors"]
}
